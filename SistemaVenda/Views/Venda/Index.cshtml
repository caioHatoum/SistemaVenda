@{
    ViewData["Title"] = "Vendas";
}
@model List<SistemaVenda.Entities.Venda>;

<h2>Vendas</h2>
<hr />
<table class="table table-bordered">
    <thead>
        <tr style="background-color:#808080">
            <th>Código</th>
            <th>Data</th>
            <th>Cliente</th>
            <th>Valor total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr onclick="Editar(@item.Codigo)" style="cursor:pointer;">
            <td>
                @item.Codigo
            </td>
            <td>
                @item.Data
            </td>
            <td>
                @item.CodigoCliente
            </td>
            <td>
                @item.Total
            </td>
        </tr>
        }
    </tbody>
</table>
<br />
<button type="button" class="btn btn-block btn-primary " onclick="Cadastrar()">Registrar venda</button>
<script>
    function Cadastrar() {
        window.location = window.origin + "/Venda/Cadastro";
    }
    function Editar(Codigo) {
        window.location = window.origin + "/Venda/Cadastro/"+Codigo;
    }
</script>