@{
    ViewData["Title"] = "Produtos";
}
@model List<SistemaVenda.Entities.Produto>;

<h2>Produtos</h2>
<hr />
<table class="table table-bordered">
    <thead>
        <tr style="background-color:#808080">
            <th>Código</th>
            <th>Descrição</th>
            <th>Quantidade</th>
            <th>Valor</th>
            <th>Categoria</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr onclick="Editar(@item.Codigo)" style="cursor:pointer;">
                <td>
                    @item.Codigo
                </td>
                <td>
                    @item.Descricao
                </td>
                <td>
                    @item.Quantidade
                </td>
                <td>
                    @item.Valor
                </td>
                <td>
                    @item.Categoria.Descricao
                </td>
            </tr>
        }
    </tbody>
</table>
<br />
<button type="button" class="btn btn-block btn-primary " onclick="Cadastrar()">Cadastrar produto.</button>
<script>
    function Cadastrar() {
        window.location = window.origin + "/Produto/Cadastro";
    }
    function Editar(Codigo) {
        window.location = window.origin + "/Produto/Cadastro/"+Codigo;
    }
</script>